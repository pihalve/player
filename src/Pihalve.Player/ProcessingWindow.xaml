<Window x:Class="Pihalve.Player.ProcessingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pihalve.Player"
        mc:Ignorable="d"
        Loaded="ProcessingWindow_OnLoaded"
        Title="ProcessingWindow" Height="70" Width="350" 
        ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" BorderThickness="1">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Margin="10 10 10 5">Processing...</TextBlock>
        <ProgressBar Name="Progress" Margin="10 5 10 10">
        </ProgressBar>
    </DockPanel>
</Window>
